@model HouseRepairMVC.Models.House

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>House condition details</legend>

    <div style="float:left;">
        <div class="display-label">Address</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Address)
        </div>

        <div class="display-label">Repairs required?</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Repairs)
        </div>

        <div class="display-label">Cost</div>
        <div class="display-field">
            €@Html.DisplayFor(model => model.Cost)
        </div>

        <p>
            <!-- Use double quotes for parameter so apostrophes in address don't act as delimiters. -->
            <input type="button" value="Show House Location" onclick='findLocation("@Model.Address");' />
        </p>

        <p id="output"></p>

        <p>
            @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>

    <div id='myMap' style="position:relative; width:400px; height:400px; float:right;"></div>
</fieldset>

